	"version": "0.2.0",
	"configurations": [
		{
			"name": ".NET Core Launch (console)",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "build",
			"program": "${workspaceFolder}/Lark.Game/bin/Debug/net8.0/Lark.Game.dll",
			"args": [],
			"cwd": "${workspaceFolder}/Lark.Game",
			"console": "internalConsole",
			"stopAtEntry": false,
			"env": {
				"DOTNET_ENVIRONMENT": "Development"
